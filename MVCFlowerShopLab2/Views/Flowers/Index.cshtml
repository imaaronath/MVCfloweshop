@model IEnumerable<MVCFlowerShopLab2.Models.Flower>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form>
    <!--HTML Comment: Type the flower name column-->
    Enter the Flower name that you want to search: <br />
    <input type="text" name="SearchString">
    <br />
    <br />
    <!--HTML Comment: Prepare dropdown list for flower type-->
    Flower Type :@Html.DropDownList("FlowerType", "All")
    <input type="submit" value="Search Flower" />
</form>
<br />
<hr />
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FlowerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlowerProducedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlowerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlowerProducedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
